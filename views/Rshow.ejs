<%- include('partials/header.ejs')%>

    <div id="showRoom" class="container-fluid showRoom">
        <div class="row">
            <div class="col-md-7">
                <div class="container-fluid">
                    <img class="showImage" src="<%= rm[0].image %>" alt="">
                </div>

            </div>
            <div class="col-md-5">
                <h1><%= rm[0].room_name %></h1>
                <hr>
                <p><%= rm[0].room_desc %></p>
                <hr>
                <h5><strong>&#9813;</strong> <%= rm[0].room_type %></i> </h5>
                <hr>
                <h5><i class="fas fa-wifi"></i> Complimentary WiFi</h5>
                <hr>
                <h5>&#10066; <%= rm[0].room_size %> sq Mt</h5>
                <hr>
                <h5><i class="fas fa-swimmer"></i> Swimming Pool</h5>
                <hr>
                <a class="btn btn-lg btn-success float-right" href="/rooms/<%= rm[0].id %>/reservation"> BOOK NOW</a>
                <h3 class="text-primary"> $ <%= rm[0].price %><sub>/Night</sub></h3>
            </div>
        </div>
    </div>
    <% if(currentUser){ %>
        <section class="container-fluid">
            <form action="/rooms/<%= rm[0].id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
            <br>
            <a class="btn btn-lg btn-primary" href="/rooms/<%= rm[0].id %>/edit"> edit</a>
        </section>
    <% } %>
<%- include ('partials/footer.ejs')%>