<%- include('partials/header.ejs')%>
    <main id="Rvetion" class="container" style="width: 40%; margin: 25px auto; margin-top: 5rem;">
        <h2 class="py-2" style="text-align: center">Book Royal Experience</h2>
        <img style="width: 100%; padding: 1rem; margin: auto; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;" src="<%= rm[0].image %>"> <br>
        <form class="py-4" action="/rooms/<%= rm[0].id%>/reservaton" method="POST">
            <div class="form-group row">
              <label class="col-sm-4 px-0 col-form-label"><strong>Room Name :</strong></label>
              <div class="col-sm-8 px-0">
                <input type="text" name="r_name" class="form-control" value="<%= rm[0].room_name %>" readonly>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-4 px-0 col-form-label"><strong>Room Type :</strong></label>
              <div class="col-sm-8 px-0">
                <input type="text" name="r_type" class="form-control" value=" <%= rm[0].room_type %>" readonly>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-4 px-0 col-form-label"><strong>Price :</strong></label>
              <div class="col-sm-8 px-0 ">
                <input type="text" name="price" class="form-control" value=" <%= rm[0].price %>" readonly>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-4 px-0 col-form-label"><strong>First Name :</strong></label>
              <div class="col-sm-8 px-0">
                <input type="text" name="f_name" class="form-control">
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-4 px-0 col-form-label"><strong>Last Name :</strong></label>
              <div class="col-sm-8 px-0">
                <input type="text" name="l_name" class="form-control">
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-4 px-0 col-form-label"><strong>City :</strong></label>
              <div class="col-sm-8 px-0">
                <input type="text" name="adds" class="form-control">
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-4 px-0 col-form-label"><strong>Age :</strong></label>
              <div class="col-sm-8 px-0 ">
                <input type="number" name="age" class="form-control">
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-4 px-0 col-form-label"><strong>Email :</strong></label>
              <div class="col-sm-8 px-0">
                <input type="email" name="email" class="form-control">
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-4 px-0 col-form-label"><strong>Phone Number :</strong></label>
              <div class="col-sm-8 px-0 ">
                <input type="number" name="ph_no" class="form-control">
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-4 px-0 col-form-label"><strong>Check In :</strong></label>
              <div class="col-sm-8 px-0">
                <input type="date" name="check_in" class="form-control">
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-4 px-0 col-form-label"><strong>Check Out :</strong></label>
              <div class="col-sm-8 px-0 ">
                <input type="date" name="check_out" class="form-control">
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-12 px-0">
                <button style="width: 100%; margin: 25px auto;"  class="btn btn-lg btn-outline-success">BOOK</button>
              </div>
            </div>
        </form>
        
    </main>

<%- include ('partials/footer.ejs')%> 