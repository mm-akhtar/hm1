<%- include('partials/header.ejs')%>


    <main class="container" style="width: 40%; margin: 25px auto; margin-top: 6rem;">
        <h2 style="text-align: center">Update the Room</h2>
        <form class="form-horizontal" action="/rooms/<%= rm[0].id%>?_method=PUT" method="POST">
            <div class="form-group">
                <div class="col-sm-12">
                    <label><strong>Image URL :</strong> </label> <input type="text"  name="r_image" class="form-control" value="<%= rm[0].image %>">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <label><strong>Room Name :</strong> </label> <input type="text" name="r_name" class="form-control" value="<%= rm[0].room_name %>">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <label><strong>Room Type :</strong> </label> <input type="text" name="r_type" class="form-control" value="<%= rm[0].room_type %>">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <label><strong>Price :</strong> </label> <input type="number" name="price" class="form-control" value="<%= rm[0].price %>">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <label><strong> Size :</strong></label> <input type="number" name="r_size" class="form-control" value="<%= rm[0].room_size %>">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <label for="rDescription"><strong> Room Description :</strong> </label>
                    <textarea id="rDescription" class="form-contrl" name="r_desc" rows="10"><%= rm[0].room_desc %></textarea>

                    <!-- <input type="text" name="r_desc" class="form-control" value="<%= rm[0].room_desc %>"> -->
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <button style="width: 100%; margin: 25px auto;"  class="btn btn-lg btn-outline-success">Update Room</button>
                </div>
            </div>
        </form>
    </main>


<%- include ('partials/footer.ejs')%> 