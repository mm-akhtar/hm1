<%- include('partials/header.ejs')%>

<main class="box py-0">
    <header class="row py-4">
        <div class="col-8 px-4">
            <div class="row px-0">
                <div class="col-3 m-0">
                    <h1 style="text-align:left;float:left;" class="display-2"><strong>&#9813;</strong></h1>
                </div>
                <div class="col-9 px-0 py-3">
                    <h1><strong> GOTHAM ROYAL</strong></h1>
                    <h5>Experience The Royal Life</h5>
                </div>
            </div>
        </div>
        <div class="col-4 py-4">
            <h5> Invoice<small> # <span class="curdate"></span>RI<%=rId %> </small></h5>
            <h6>Date : <span class="Curdate"></span></h6>
        </div>
        <hr style="clear:both;"> 
    </header>
    <div class="m-0 px-4 py-2 r_header" style="background-color: rgb(211, 206, 206); color: rgb(43, 34, 34);">
        <h3><%=r_name%></h3>
        <h6>A King Size GOTHAM ROYAL Experience</h6>
    </div>
    <article class="container py-4" style="width: 80%; margin:auto">
        <div class="form-group row">
            <h6 class="col-sm-3"><strong>Name </strong></h6>
            <div class="col-sm-9 px-0">
                <h6 class="px-0"><strong>: </strong> <%=customer.f_name %><strong> </strong><%=customer.l_name %></h6>
            </div>
        </div>
        <hr>
        <div class="form-group row">
            <h6 class="col-sm-3"><strong>Email </strong></h6>
            <div class="col-sm-9 px-0">
                <h6 class="px-0"><strong>: </strong> <%=customer.email %></h6>
            </div>
        </div>
        <hr>
        <div class="form-group row">
            <h6 class="col-sm-3"><strong>Phone Number </strong></h6>
            <div class="col-sm-9 px-0">
                <h6 class="px-0"><strong>: </strong> <%=customer.ph_no %> </h6>
            </div>
        </div>
        <hr>
        <div class="form-group row">
            <h6 class="col-sm-3"><strong>Age  </strong> </h6>
            <div class="col-sm-9 px-0">
                <h6 class="px-0"><strong>: </strong><%=customer.age %> </h6>
            </div>
        </div>
        <hr>
        <div class="form-group row">
            <h6 class="col-sm-3"><strong>City  </strong> </h6>
            <div class="col-sm-9 px-0">
                <h6 class="px-0"><strong>: </strong><%=customer.adds %> </h6>
            </div>
        </div>
        <hr>
        <div class="form-group row">
            <h6 class="col-sm-3"><strong>Check In  </strong> </h6>
            <div class="col-sm-9 px-0">
                <h6 class="px-0"><strong>: </strong><%=reservation.check_in %> </h6>
            </div>
        </div>
        <hr>
        <div class="form-group row">
            <h6 class="col-sm-3"><strong>Check Out  </strong> </h6>
            <div class="col-sm-9 px-0">
                <h6 class="px-0"><strong>: </strong><%=reservation.check_out %>  </h6>
            </div>
        </div>
        <hr>
        <div class="form-group row">
            <h6 class="col-sm-3"><strong>Staying For  </strong> </h6>
            <div class="col-sm-9 px-0">
                <h6 class="px-0"><strong>: </strong><%=day%> <strong> Days</strong>  </h6>
            </div>
        </div>
        <hr>
    </article>
    <div class="m-0 px-4 py-2 " style="background-color: rgb(211, 206, 206);">
        <h3 class="r_header">Payment Deatils</h3>
        <hr>
        <div class="form-group row">
            <h6 class="col-sm-6"><strong>Price per Night : </strong> </h6>
            <div class="col-sm-6 px-0">
                <h6 style="text-align:right" class="px-4"><strong> $ </strong><%=amount%></h6>
            </div>
        </div>
        <hr>
        <div class="form-group row">
            <h6 class="col-sm-6"><strong>Staying For  <%=day%> Night : </strong> </h6>
            <div class="col-sm-6 px-0">
                <h6 style="text-align:right" class="px-4"><strong> <%=day%> X  $ </strong><%=amount%></h6>
            </div>
        </div>
        <hr>
        <div class="form-group row">
            <h6 class="col-sm-6"><strong>Total Payable Amount :</strong> </h6>
            <div class="col-sm-6 px-0">
                <h6 style="text-align:right" class="px-4"><strong>$ </strong><%=tpay%></h6>
            </div>
        </div>
    </div>
    <article class="container my-4 pt-4 py-2">
        <div class="form-group row">
            <p class="col-sm-6 "><strong>Note:</strong> Hello <%=customer.f_name %><strong> </strong><%=customer.l_name %> Payment Method Booking Details and BILL has been Send to Your Email Address and Phone Number</p>
            <div class="col-sm-6 px-0 py-0 my-0">
                <a style="width:20rem;" href="#" class="float-right btn btn-primary"><h1> PAY</h1></a>
            </div>
        </div>
    </article>

</main>

<footer style="width:10%; margin: auto; margin-top:0; padding-top: 0; margin-bottom: 50px;">
    <button class="btn btn-md btn-success" onclick="window.print()">Print this Bill</button>
</footer>


<%- include ('partials/footer.ejs')%> 