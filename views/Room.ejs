<%- include('partials/header.ejs')%>


    <main id="newRoom" style="width: 40%; margin: 25px auto; margin-top: 6rem;">
        <h1 style="text-align: center">Add a New Room</h1>
        <hr>
        <form class="form-horizontal" method="POST" action="/rooms">
            <div class="form-group">
              <div class="col-sm-12">
                <input type="text" required="required" name="r_image" class="form-control" placeholder="Image URL">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <input type="text" required="required" name="r_name" class="form-control" placeholder="Room Name">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <input type="text" required="required" name="r_type" class="form-control"placeholder="Room Type">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <input type="number" required="required" name="price" class="form-control"placeholder="Price in USD">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <input type="text" required="required" name="r_desc" class="form-control"placeholder="Room Description">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <input type="number" required="required" name="r_size" class="form-control"placeholder="Room Size">
              </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <button style="width: 100%; margin: 25px auto;"  class="btn btn-lg btn-outline-success">ADD ROOM</button>
                </div>
            </div>

          </form>
    </main>

    
<%- include ('partials/footer.ejs')%> 